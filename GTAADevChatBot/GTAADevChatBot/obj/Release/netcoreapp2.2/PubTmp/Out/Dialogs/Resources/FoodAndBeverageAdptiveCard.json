{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "Image",
      "url": "<ImageUrl>",
      "size": "Stretch",
      "altText": "<altText>",
      "selectAction": {
        "type": "Action.OpenUrl",
        "title": "cool link",
        "url": "<OpenImageURL>"
      }
    },
    {
      "type": "Container",
      "spacing": "None",
      "backgroundImage": "https://www.colorhexa.com/002663.png",
      "verticalContentAlignment": "Center",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "horizontalAlignment": "Center",
              "verticalContentAlignment": "Center",
              "items": [
                {
                  "type": "TextBlock",
                  "horizontalAlignment": "Center",
                  "size": "Medium",
                  "weight": "Bolder",
                  "color": "Light",
                  "text": "<Name>",
                  "wrap": true
                }
              ],
              "bleed": true,
              "width": 50
            }
          ]
        }
      ]
    },
    {
      "type": "Container",
      "separator": true,
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "minHeight": "90px",
              "style": "default",
              "items": [
                {
                  "type": "TextBlock",
                  "separator": true,
                  "text": "<Description>",
                  "wrap": true,
                  "maxLines": 5
                }
              ],
              "width": "stretch"
            }
          ]
        }
      ]
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "url": "data:image/svg+xml;base64,",
              "size": "Small"
            }
          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "verticalContentAlignment": "Center",
          "items": [
            {
              "type": "TextBlock",
              "text": "<Location>",
              "horizontalAlignment": "Left"
            }
          ],
          "width": "auto"
        }
      ]
    },
    {
      "type": "ColumnSet",
      "separator": true,
      "columns": [
        {
          "type": "Column",
          "items": [
            {
              "type": "Image",
              "url": "data:image/svg+xml;base64,",
              "size": "Small"
            }
          ],
          "width": "auto"
        },
        {
          "type": "Column",
          "verticalContentAlignment": "Center",
          "items": [
            {
              "type": "TextBlock",
              "text": "<Timings>",
              "horizontalAlignment": "Left"
            }
          ],
          "width": "auto"
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0",
  "actions": [
    {
      "type": "Action.OpenUrl",
      "title": "More Info",
      "url": "<RestURL>"
    }
  ]
}